section
    .container
        include info
        .steps
            .bar
            .circle_steps
                a(href="index.html").box-button.active
                    .circle 1
                    span Tipo de negocio
                a(href="persona-natural.html").box-button.active
                    .circle 2
                    span Información del solicitante
                .box-button
                    .circle 3
                    span Confirmación
        .business
            form(action="" id="person")
                .informacion
                    .ud Información del solicitante
                    .campo
                        label(for="nombre") Nombres y apellidos #[span *]
                        input(placeholder="Ej: Pablo Marmol" type="text" name="nombre" id="nombre" minlength="2" required)
                    .campo
                        label(for="email") Correo electrónico #[span *]
                        input(placeholder="Ej: pablo@mail.com" type="email" name="email" id="email" required)
                    .campo
                        label(for="phone") Número de teléfono y/o celular #[span *]
                        input(placeholder="Ej: 56987654321" type="number" name="phone" id="phone" required)
                .informacion
                    .ud Sobre tu proyecto
                    .campo
                        p Presupuesto estimado #[span *]
                        .check
                            input(type="radio" name="employees" id="hasta200" required)
                            label(for="hasta200") menos de 200 UF
                        .check
                            input(type="radio" name="employees" id="hasta400" required)
                            label(for="hasta400") 200 a 400 UF
                        .check
                            input(type="radio" name="employees" id="mas400" required)
                            label(for="mas400") más de 400 UF
                    .campo
                        label(for="detalles") Por favor, detalla tus requerimientos de desarrollo #[span *]
                        textarea(placeholder="Ej;\n¿Qué quieres desarrollar?\n¿Quieres cambiar un sistema ya implementado?\n¿Cuáles son tus objetivos con el desarrollo?\nCualquier dato o información que consideres relevante.\n\n" name="detalles" id="detalles" rows="5" required)
                .item-required #[span *] Campos obligatorios
                .item-required.complete #[span *] Completar los campos resaltados
                .form-buttons
                    a.back(href="index.html") Atrás
                    input.submit(type="submit" value="Enviar")#submitPerson
        include thanks
        